<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.facilesales.facilesalesapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.facilesales.facilesalesapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <activity
        android:id="@+id/nav_sell"
        android:name="com.facilesales.facilesalesapp.SellingView"
        android:label="Sell Items"
        tools:layout="@layout/activity_selling_view2" />

    <activity
        android:id="@+id/nav_history"
        android:name="com.facilesales.facilesalesapp.History"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/activity_history" />

    <activity
        android:id="@+id/nav_pv"
        android:name="com.facilesales.facilesalesapp.ProductsView"
        android:label="@string/menu_products"
        tools:layout="@layout/activity_products_view" />
</navigation>